{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    // The next 3 settings are required for IDE's interlisence
    "composite": true,
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "references": [
    {"path": "../consumee2"}    // 'the package 'consumee' must set "composite: true" in its tsconfig
  ]
}
